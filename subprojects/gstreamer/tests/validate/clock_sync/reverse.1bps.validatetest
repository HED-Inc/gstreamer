meta,
    handles-states=true,
    ignore-eos=true,
    args = {
       "fakesrc datarate=1 sizetype=fixed filltype=pattern-span format=time sizemax=1 ! fakesink name=sink sync=true",
    },
    configs = {
       "$(validateflow), pad=sink:sink, buffers-checksum=true",
    }

play
seek, start=0.0, stop=5.0, flags=accurate+flush, rate=-1.0

# First buffer is displayed as fast as possible
crank-clock, expected-elapsed-time=0.0, expected-time=0.0
check-position, expected-position=5.0

crank-clock, repeat=4, expected-elapsed-time=1.0

# Waiting 1 second on EOS
crank-clock, expected-time=5.0

check-position, expected-position=0.0

seek, start=0.0, stop=1.0, flags=accurate+flush, rate=1.0
crank-clock, expected-elapsed-time=0.0
crank-clock, expected-elapsed-time=1.0

stop, on-message=eos
